          <div class="box post-box mt-2">
            <article class="media">
              <div class="media-left">
                <figure class="image is-64x64">
                  <%= profile_image(post.author, 128, true) %>
                </figure>
              </div>
              <div class="media-content">
                <div class="content">
                  <p>
                    <strong>
                      <%= link_to post.author.username, post.author  %>
                    </strong>

                    <small><%= time_ago_in_words(post.created_at) %></small>
                    <br />
                    <%= link_to post.title, post %>
                  </p>
                </div>
                <nav class="level is-mobile">
                  <div class="level-left is-flex is-flex-direction-row">
                    <a class="level-item" aria-label="comment">
                      <span class="icon is-small">
                        <i class="fa-solid fa-comment" aria-hidden="true"></i>
                      </span>
                    </a>
                    <a class="level-item" aria-label="like">
                      <span class="icon is-small">
                        <i class="fas fa-heart" aria-hidden="true"></i>
                      </span>
                    </a>
                  </div>
                </nav>
              </div>
            </article>
          </div>