<div class="container hero">
  <div class="content">
    <h1>Posts</h1>
  
    <ul>
      <% @posts.each do |post| %>
        <li>
          <%= link_to post.title, post %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="actions">
    <%= link_to 'New post', new_post_path %>
  </div>
</div>