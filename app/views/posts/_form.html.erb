<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :title, class: "label" %>
    <% unless @post.errors[:title].present? %>
      <div class="control">
        <%= f.text_field :title, class: "input" %>
      </div>
    <% else %>
      <div class="control has-icons-right">
        <%= f.text_field :title, class: "input is-danger" %>
        <span class="icon is-small is-right">
         <i class="fas fa-exclamation-triangle"></i>
        </span>
      </div>
      <% @post.errors.full_messages_for(:title).each do |message| %>
        <p class="help is-danger"> <%= message %> </p>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :content, class: "label" %>
    <% unless @post.errors[:content].present? %>
      <div class="control">
        <%= f.rich_text_area :content, class: "textarea" %>
      </div>
    <% else %>
      <div class="control has-icons-left has-icons-right">
        <%= f.rich_text_area :content, class: "textarea is-danger" %>
        <span class="icon is-small is-right">
         <i class="fas fa-exclamation-triangle"></i>
        </span>
      </div>
      <% @post.errors.full_messages_for(:content).each do |message| %>
        <p class="help is-danger"> <%= message %> </p>
      <% end %>
    <% end %>
  </div>

  <div class="field is-grouped">
    <div class="control mt-2">
      <%= f.submit class: "button is-link" %>
    </div>
  </div>
<% end %>