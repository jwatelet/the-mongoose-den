<%= turbo_frame_tag dom_id(followed_user) do %>
  <% follow = current_user.find_follow_for(followed_user)%>
  <% if follow %>
    <%= link_to follow_path(follow, followed_user_id: followed_user.id), class: "level-item unfollow", data: {
                            turbo_method: :delete
                          } do %>
      <div class="button is-danger">
        Unfollow
      </div>
    <% end %>
  <% else %>
    <%= render 'follows/form', followed_user: followed_user %>
  <% end %>
<% end %>
